<div class="d-flex justify-content-center align-items-center homepagebackground vh-100">
  <div class="card-body d-flex flex-column newEventContainer" style="color: #ffff;">
    <% if @event_publish_data["published"] == true %>
     <p>
        <i class="fas fa-check-circle fa-3x custom-icon"></i> <!-- Font Awesome check circle icon -->
      </p>
      <h2 class="card-title">Your event has been successfully publish in Eventbrite</h2>
      <% event_id = @event_request["url"].split("-")[-1] %>
      <% event_url = "https://www.eventbrite.com/myevent?eid=#{event_id}" %>

      <%# <p class="mt-3">You can navigate to this Link to view your event:</p> %>
      <div class="d-flex">
      <p><%= link_to "View Event", "https://www.eventbrite.com/myevent?eid=#{event_id}", target: "_blank", class: "btn-dark solidbg" %></p>
      <span style="padding: 10px"> </span>
      <%= link_to "HOME", root_path, class: "btn-dark solidbg" %>
      <%= link_to "BACK", events_path, class: "btn-dark solidbg" %>
      </div>
    <% else %>
    <p>
      <i class="fas fa-times-circle text-danger fa-3x" style="color: #3CA0E7;"></i>
    </p>
      <h2 class="card-title">Sorry there has been an Error!</h2>
      <p><%= link_to "HOME", root_path, class: "btn-dark solidbg" %></p>

    <% end %>
  </div>
</div>



