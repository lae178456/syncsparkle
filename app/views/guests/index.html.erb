<div class="d-flex justify-content-center align-items-center  vh-100 custom-table" style="color: white;">

  <div class="card-body d-flex flex-column newEventContainer" style="color: #ffff;">
    <%= link_to new_guest_path, class: "plus-icon d-inline-flex align-items-center justify-content-center btn btn-flat btn-sm text-white", style: "position: absolute; top: 10px; right: 10px; width: 30px; height: 30px; border-radius: 50%;" do %>
      <i class="fa-solid fa-user-plus fa-lg" style="color: white;"></i>
    <% end %>

    <h2 class="mb-3">Guest-list</h2>
      <table class="table table-bordered text-center">
    <thead>
      <tr>
        <th scope="col" style="color: white;"><strong>First Name</strong></th>
        <th scope="col" style="color: white;"><strong>Last Name</strong></th>
        <th scope="col" style="color: white;"><strong>Email</strong></th>
        <th scope="col" style="color: white;"><strong>Action</strong></th>

      </tr>
    </thead>
    <tbody>
      <% @guests.each do |guest| %>
        <tr>
          <td style="color: white;"><%= guest.first_name %></td>
          <td style="color: white;"><%= guest.last_name %></td>
          <td style="color: white;"><%= guest.email %></td>
          <td>

          <%= link_to edit_guest_path(guest), class: "edit-icon btn btn-flat btn-sm text-white" do %>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>

          <%= link_to guest_path(guest), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"}, class: "delete-icon btn btn-flat btn-sm text-white" do %>
            <i class="fa-regular fa-trash-can"></i>
          <% end %>
          </td>


        </tr>
      <% end %>
    </tbody>
  </table>

  </div>
</div>
