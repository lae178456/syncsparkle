<div class="d-flex flex-column justify-content-center align-items-center" style="padding: 40px 95px;">
  <div class="sparkletitle w-100 text-center">
    <p>guest list</p>
  </div>
  <div class="card-body newEventContainer w-100 p-5"  style="color: #ffff;  max-width: 1050px;">
    <%= link_to new_guest_path, class: "plus-icon d-inline-flex align-items-center justify-content-center btn btn-flat btn-sm text-white", style: "position: absolute; top: 10px; right: 10px; width: 30px; height: 30px; border-radius: 50%;" do %>
      <i class="fa-solid fa-user-plus fa-lg" style="color: white;"></i>
    <% end %>
    <table class="table table-bordered text-center" style="border: none;">
      <thead class="border-0" >
        <tr style="border: 1px solid rgba(255, 255, 255, 0.28); ">
          <th scope="col" class="text-light" style="border: 1px solid rgba(255, 255, 255, 0.28); "><strong>First Name</strong></th>
          <th scope="col" class="text-light" style="border: 1px solid rgba(255, 255, 255, 0.28); "><strong>Last Name</strong></th>
          <th scope="col" class="text-light" style="border: 1px solid rgba(255, 255, 255, 0.28); "><strong>Email</strong></th>
          <th scope="col" class="text-light" style="border: 1px solid rgba(255, 255, 255, 0.28); "><strong>Action</strong></th>
        </tr>
      </thead>
      <tbody class="border-0" >
        <% @guests.each do |guest| %>
          <tr style="border: 1px solid rgba(255, 255, 255, 0.28);">
            <td class="text-light" style="border: 1px solid rgba(255, 255, 255, 0.28); "><%= guest.first_name %></td>
            <td class="text-light" style="border: 1px solid rgba(255, 255, 255, 0.28); "><%= guest.last_name %></td>
            <td class="text-light" style="border: 1px solid rgba(255, 255, 255, 0.28); "><%= guest.email %></td>
            <td class="text-light" style="border: 1px solid rgba(255, 255, 255, 0.28); ">

              <%= link_to edit_guest_path(guest), class: "edit-icon btn btn-flat btn-sm text-white" do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <% end %>

              <%= link_to guest_path(guest), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"}, class: "delete-icon btn btn-flat btn-sm text-white" do %>
                <i class="fa-regular fa-trash-can"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
