<div class="container mt-0 mb-2">
  <%= link_to events_path, class: "btn btn-outline-dark bg-light mt-1" do %>
    <i class="fa-solid fa-chevron-left"></i> Back to Dashboard
  <% end %>

</div>

<div class="container mt-3">
  <div class="row shadow-lg zoom-on-hover">
    <div class="col-3">
      <div class="mt-3">
        <% if @event.photo.attached? %>
          <%= cl_image_tag @event.photo.key, crop: :fill, class: "card-img-top d-block w-100 h-100" %>
        <% else %>
          <%= image_tag "event_default.svg", class: "card-img-top d-block w-100 h-100" %>
        <% end %>
      </div>
      <div>
      <h3 class="text-flat pb-1 mb-1 mt-2" style="font-weight: bold;"><%= @event.title %></h3>
      <p class="mt-2"><i class="fa-solid fa-location-dot"></i> <%= @event.location %></p>
      </div>
    </div>
    <div class="col-9">
      <div class="card-body bg-white ml-2">
        <div class="row">
          <div class="col-md-12 bg-white">

            <p class="text-justify" style="margin-top: 10px;"><strong>Description:</strong> <%= @event.description %></p>
            <div class="row">
    <div class="col-md-6">
      <p><strong><i class="fa-regular fa-calendar-check"></i></strong> From <%= @event.start_date %> at <%= @event.start_time %></p>
    </div>
    <div class="col-md-6">
      <p><strong><i class="fa-regular fa-calendar-check"></i></strong> Until <%= @event.end_date %> at <%= @event.end_time %></p>
    </div>

            <p class="mt-3"><strong>Online Event?:</strong> <%= @event.online_event %></p>
            <p class="mt-3"><strong>Category:</strong> <%= @event.categories %></p>
            <p class="mt-3"><strong>URL:</strong> <%= @event.url %></p>
            <p class="mt-3 mb-5"><strong>Hashtags:</strong> <%= @event.hashtags %></p>
            <div>
              <small><%= link_to image_tag("edit.png", size: "20x20"), edit_event_path(@event), class: "float-right me-5" %></small>
              <small><%= link_to image_tag("deleteicon.png", size: "20x20"), event_path(@event), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@event.title} on all platforms?"}, class: "float-right "%></small>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-md-12 bg-white shadow-lg">
      <div class="fw-bold" style="font-size: 30px;">
        <p class="m-0 mr-2">Post to<i class="fa-solid fa-share-nodes"></i></p>
        <%= link_to @eventbrite_oauth_link, class: "btn btn-outline zoom-on-hover eventbrite-icon" do %>
          <%= image_tag("eventbrite.png", class: "img-fluid ml-4", style: "width: 150px; height: 150px;") %>
        <% end %>
        <!-- Add more platforms as needed -->
      </div>
    </div>
  </div>

</div>
